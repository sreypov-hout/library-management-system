<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="700.0" prefWidth="1100.0" stylesheets="@/com/example/javafx/css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.controller.MainController">
    <left>
        <VBox prefHeight="700.0" prefWidth="220.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="sidebar-title" text="Library System">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="40.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="dashboardButton" mnemonicParsing="false" onAction="#handleDashboardClick" prefHeight="50.0" prefWidth="220.0" text="Dashboard" />
                <Button fx:id="booksButton" mnemonicParsing="false" onAction="#handleBooksClick" prefHeight="50.0" prefWidth="220.0" text="Manage Books" />
                <Button fx:id="borrowersButton" mnemonicParsing="false" onAction="#handleBorrowersClick" prefHeight="50.0" prefWidth="220.0" text="Manage Borrowers" />
                <Button fx:id="issueButton" mnemonicParsing="false" onAction="#handleIssueReturnClick" prefHeight="50.0" prefWidth="220.0" text="Issue / Return Books" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </VBox>
    </left>
</BorderPane>