<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="718.0" prefWidth="1174.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.controller.BookController">
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefHeight="678.0" prefWidth="277.0" spacing="8.0" styleClass="form-card">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <ImageView fx:id="bookImageView" fitHeight="150.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/com/example/javafx/images/book_covers/power.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleSelectImage" prefHeight="30.0" prefWidth="120.0" styleClass="select-image-button" text="Select Image" />
                            </children>
                        </VBox>
                        <Label text="ISBN" />
                        <TextField fx:id="isbnField" promptText="e.g., 987-377-39" />
                        <Label text="Title" />
                        <TextField fx:id="titleField" promptText="e.g., The 48 Laws of Power" />
                        <Label text="Author" />
                        <TextField fx:id="authorField" promptText="e.g., Robert Greene" />
                        <Label text="Publisher" />
                        <TextField fx:id="publisherField" promptText="e.g., 2004" />
                        <Label text="Quantity" />
                        <TextField fx:id="quantityField" promptText="e.g., 04" />
                        <Label text="Book Description" />
                        <TextArea fx:id="descriptionArea" prefHeight="1.0" prefWidth="127.0" wrapText="true" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                  <HBox>
                     <children>
                                <Button mnemonicParsing="false" onAction="#handleAddBook" prefHeight="26.0" prefWidth="102.0" styleClass="add-button" text="Add">
                           <HBox.margin>
                              <Insets right="8.0" />
                           </HBox.margin></Button>
                                <Button mnemonicParsing="false" onAction="#handleClearFields" prefHeight="26.0" prefWidth="101.0" styleClass="clear-button" text="Clear" />
                     </children>
                  </HBox>
                  <HBox prefHeight="26.0" prefWidth="130.0">
                     <children>
                                <Button mnemonicParsing="false" onAction="#handleUpdateButton" prefHeight="26.0" prefWidth="101.0" styleClass="update-button" text="Update">
                           <HBox.margin>
                              <Insets right="8.0" />
                           </HBox.margin>
                           <padding>
                              <Insets left="-10.0" right="-10.0" />
                           </padding></Button>
                                <Button mnemonicParsing="false" onAction="#handleDeleteButton" prefHeight="26.0" prefWidth="102.0" styleClass="delete-button" text="Delete" />
                     </children>
                  </HBox>
                    </children>
                </VBox>
                <VBox styleClass="form-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label styleClass="table-title" text="All Books" />
                        <TableView fx:id="bookTableView" styleClass="book-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="isbnColumn" prefWidth="100.0" text="ISBN" />
                                <TableColumn fx:id="titleColumn" prefWidth="230.0" text="Title" />
                                <TableColumn fx:id="authorColumn" prefWidth="210.0" text="Author" />
                                <TableColumn fx:id="publisherColumn" prefWidth="120.0" text="Publisher" />
                                <TableColumn fx:id="quantityColumn" prefWidth="60.0" text="QTY" />
                                <TableColumn fx:id="statusColumn" prefWidth="130.0" text="Status" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
