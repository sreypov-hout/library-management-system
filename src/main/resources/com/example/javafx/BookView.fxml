<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.controller.BookController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="32.0" layoutY="28.0" prefHeight="545.0" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Book Details">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="selectImageButton" mnemonicParsing="false" onAction="#handleSelectImage" prefWidth="210.0" text="Select Image" />
                <Label fx:id="imagePathLabel" text="No image selected" wrapText="true" />
                <TextField fx:id="isbnField" promptText="ISBN" />
                <TextField fx:id="titleField" promptText="Title" />
                <TextField fx:id="authorField" promptText="Author" />
                <TextField fx:id="genreField" promptText="Genre" />
                <TextField fx:id="quantityField" promptText="Quantity" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="addButton" onAction="#handleAddBook" prefWidth="100.0" text="Add Book" />
                        <Button fx:id="clearButton" onAction="#handleClearFields" prefWidth="100.0" text="Clear" />
                    </children>
                </HBox>
                <Label fx:id="statusLabel" textFill="green" />
            </children>
        </VBox>
        <TableView fx:id="bookTableView" layoutX="300.0" layoutY="28.0" prefHeight="545.0" prefWidth="470.0">
            <columns>
                <TableColumn fx:id="isbnColumn" prefWidth="100.0" text="ISBN" />
                <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="120.0" text="Author" />
                <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Qty" />
            </columns>
        </TableView>
    </children>
</AnchorPane>